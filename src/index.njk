<section class="hero">
  <h1>Explore Europe on a Budget</h1>
  <p>Discover hidden gems and travel tips for the savvy explorer.</p>
  <a href="/blog/" class="btn">Start Your Journey</a>
</section>

<section class="featured-destinations">
  <h2>Featured Destinations</h2>
  <div class="destinations-grid">
    <!-- Repeat for each destination -->
    <div class="destination-card">
      <img src="/images/destination1.jpg" alt="Destination Name">
      <h3>Destination Name</h3>
      <p>Brief description of the destination.</p>
      <a href="/destinations/destination-name/" class="btn">Learn More</a>
    </div>
    <!-- ... -->
  </div>
</section>

<section class="latest-posts">
  <h2>Latest Blog Posts</h2>
  <div class="posts-grid">
    {% for post in collections.post | reverse | slice(0,3) %}
    <div class="post-card">
      <img src="{{ post.data.thumbnail }}" alt="{{ post.data.title }}">
      <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
      <p>{{ post.data.excerpt }}</p>
      <a href="{{ post.url }}" class="btn">Read More</a>
    </div>
    {% endfor %}
  </div>
</section>

